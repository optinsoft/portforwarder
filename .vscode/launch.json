    "version": "0.2.0",
    "configurations": [
        {
            "name": "portforwarder",
            "type": "debugpy",
            "request": "launch",
            "program": "portforwarder.py",
            "console": "integratedTerminal",
            "args": [
                "--source-host", "0.0.0.0",
                "--source-port", "8000",
                "--target-file", "targets.txt",
                "--target-port", "1080",
                "--max-target-age", "10",
                "--allow-ip", "127.0.0.1"
            ]
        }
    ]
}